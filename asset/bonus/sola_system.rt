# Mercury (smallest planet, closest to sun)
m_mercury type:lambertian spc:0.8 shi:80.0 pat:image tex:textures/2k_mercury.png
sp	-2.5,0,0	1		255,255,255 m_mercury

# # Venus (similar size to Earth, thick atmosphere)
m_venus type:lambertian spc:0.5 shi:100.0 pat:image tex:textures/2k_venus_surface.png
sp	-1,0,0	1.1		255,255,255 m_venus

# # Earth (our home planet)
m_earth type:lambertian shi:150.0 pat:image tex:textures/earth.png bump:textures/earth_bump.png bump_scale: 50.0
sp	0.8,0,0	1.0		255,255,255 m_earth

# # Mars (the red planet)
m_mars type:lambertian spc:0.3 shi:50.0 pat:image tex:textures/2k_mars.png
sp	1.8,0,0	0.6		255,255,255 m_mar

# # Jupiter (largest planet, gas giant with great red spot)
m_jupiter type:lambertian spc:0.7 shi:120.0 pat:image tex:textures/2k_jupiter.png
