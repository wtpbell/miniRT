# Camera and lighting - positioned to see all planets
C	2,0,20	0,0,1		40
A					0.3		20,20,40
L 0,20,60 0.1 255,255,200

m_dielectric type:dielectric tr:0.9 ir: 1.03
# Main light - sun
spl	-7,1,0		0,-0.2,-1		1.0	100	150	255,0,0
spl	-7,1,0		0,-0.2,-1		1.0	100	150	255,0, 0
